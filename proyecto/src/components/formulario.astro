<form
    action="https://formspree.io/f/xpwzladp"
    method="POST"
    class="space-y-6 bg-white dark:bg-zinc-900 shadow-lg p-8 rounded-xl h-full"
>
    <div>
        <label for="nombre" class="block mb-2 text-gray-700 dark:text-gray-300"
            >Nombre</label
        >
        <input
            type="text"
            id="nombre"
            name="nombre"
            class="border-gray-300 dark:border-gray-700 bg-white dark:bg-zinc-800 px-4 py-2 border focus:border-transparent rounded-lg focus:ring-2 focus:ring-red-500 dark:focus:ring-teal-500 w-full text-gray-900 dark:text-white"
            required
        />
    </div>

    <div>
        <label for="email" class="block mb-2 text-gray-700 dark:text-gray-300"
            >Email</label
        >
        <input
            type="email"
            id="email"
            name="email"
            class="border-gray-300 dark:border-gray-700 bg-white dark:bg-zinc-800 px-4 py-2 border focus:border-transparent rounded-lg focus:ring-2 focus:ring-red-500 dark:focus:ring-teal-500 w-full text-gray-900 dark:text-white"
            required
        />
    </div>

    <div>
        <label for="mensaje" class="block mb-2 text-gray-700 dark:text-gray-300"
            >Mensaje</label
        >
        <textarea
            id="mensaje"
            name="mensaje"
            rows="4"
            class="border-gray-300 dark:border-gray-700 bg-white dark:bg-zinc-800 px-4 py-2 border focus:border-transparent rounded-lg focus:ring-2 focus:ring-red-500 dark:focus:ring-teal-500 w-full text-gray-900 dark:text-white"
            required></textarea>
    </div>

    <input type="text" name="_gotcha" style="display:none" />

    <button
        type="submit"
        class="bg-red-500 hover:bg-red-600 dark:hover:bg-teal-600 dark:bg-teal-500 px-6 py-3 rounded-lg w-full text-white transition-colors"
    >
        Enviar mensaje
    </button>
    <slot name="formulario" />
</form>
