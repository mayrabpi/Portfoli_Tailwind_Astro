	<script>
		document.addEventListener("DOMContentLoaded", function () {
			const container = document.getElementById("projects-container");
			const scrollLeftBtn = document.getElementById("scroll-left");
			const scrollRightBtn = document.getElementById("scroll-right");

			if (!container || !scrollLeftBtn || !scrollRightBtn) {
				console.error("No se encontraron los elementos del carrusel");
				return;
			}

			const scrollAmount = 320;

			scrollLeftBtn.addEventListener("click", () => {
				container.scrollBy({
					left: -scrollAmount,
					behavior: "smooth",
				});
			});

			scrollRightBtn.addEventListener("click", () => {
				container.scrollBy({
					left: scrollAmount,
					behavior: "smooth",
				});
			});

			container.addEventListener("scroll", () => {
				const scrollLeft = container.scrollLeft;
				const scrollWidth =
					container.scrollWidth - container.clientWidth;
				const percentage = scrollLeft / scrollWidth;

				const indicators =
					document.querySelectorAll('[id^="indicator-"]');
				indicators.forEach((indicator, index) => {
					const indicatorElement = indicator as HTMLElement;
					const indicatorPosition = index / 2;
					indicatorElement.style.opacity =
						Math.abs(percentage - indicatorPosition) < 0.3
							? "1"
							: "0.5";
				});
			});
		});
	</script>

